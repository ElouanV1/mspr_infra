wget https://repo.zabbix.com/zabbix/6.1/debian/pool/main/z/zabbix-release/zabbix-release_6.1-1+debian11_all.deb
sudo dpkg -i zabbix-release_6.1-1+debian11_all.deb
sudo apt update
sudo apt full-upgrade -y
sudo apt install zabbix-agent
sudo systemctl enable zabbix-agent
sudo systemctl start zabbix-agent
sudo nano /etc/zabbix/zabbix_agentd.conf

Server=10.5.2.30       
ListenPort=10050            
ListenIP=0.0.0.0               
ServerActive=10.5.2.30
Hostname=Zabbix server2 

sudo systemctl restart zabbix-agent
